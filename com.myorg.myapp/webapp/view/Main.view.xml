<mvc:View
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="com.myorg.myapp.controller.Main"
    core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}"
>
    <Page class="sapUiSmallMargin">
        <content>
            <Table
                id="idTable"
                items="{/Books}"
            >
                <headerToolbar>
                    <Toolbar>
                        <Title text="Books" />
                        <ToolbarSpacer />
                        <SearchField width="30%" />
                        <Button
                            text="sort"
                            icon="sap-icon://sort"
                        />
                        <Button text="onModified-CAP"
                        press="onModify"/>
                        <Button
                            text="Add"
                            press="onAdd"
                            icon="sap-icon://add"
                        />
                        <Button
                            text="ListItem"
                            press="onListItem"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Book ID" />
                    </Column>
                    <Column>
                        <Text text="Title" />
                    </Column>
                    <Column>
                        <Text text="Author" />
                    </Column>
                    <Column>
                        <Text text="Price" />
                    </Column>
                    <Column>
                        <Text text="Stock" />
                    </Column>

                    <Column>
                        <Text text="Actions" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{ID}" />
                            <Text text="{title}" />
                            <Text text="{author}" />
                            <Text text="{price}" />
                            <Text text="{stock}" />
                            <HBox>
                                <Button
                                    icon="sap-icon://edit"
                                    press="onEdit"
                                />
                                <Button
                                    icon="sap-icon://delete"
                                    press="onDelete"
                                />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>

        <Dialog
            id="addDialog"
            title="Add Book"
            class="sapUiContentPadding"
        >
            <VBox>
                <Label text="Book ID " />
                <Input
                    id="idInput"
                    type="Number"
                    valueStateText="The ID must be a number"
                    liveChange="validateBookId"
                    required="true"
                />
                <Label text="Title" />
                <Input
                    id="titleInput"
                    type="Text"
                    valueStateText="The title must be a valid string"
                    change="validateTitle"
                    required="true"
                />
                <Label text="Author" />
                <Input
                    id="authorInput"
                    type="Text"
                    valueStateText="The author should be a valid name"
                    change="validateAuthor"
                />
                <Label text="Price" />
                <Input
                    id="priceInput"
                    type="Number"
                    valueStateText="The price should a valid number"
                    change="validatePrice"
                />
                <Label text="Stock" />
                <Input
                    id="stockInput"
                    type="Number"
                    valueStateText="the stock should be a valid number"
                    change="validateStock"
                />
                <HBox>
                    <Button
                        text="Save"
                        press="onSaveAdd"
                    />
                    <Button
                        text="Cancel"
                        press="onCancelAdd"
                    />
                </HBox>
            </VBox>
        </Dialog>
        <Dialog
            id="editDialog"
            title="Updating a new Book"
            class="sapUiContentPadding"
        >
            <VBox>
                <Label text="BookId update" />
                <Input id="editId" />
                <Label text="Title" />
                <Input id="editTitle" />
                <Label text="Author" />
                <Input id="editAuthor" />
                <Label text="Stock" />
                <Input id="editStock" />
                <Label text="Price" />
                <Input id="editPrice" />
                <HBox>
                    <Button
                        text="save edited"
                        press="onSaveEdit"
                    />
                    <Button
                        text="cancel edit"
                        press="onCancelEdit"
                    />
                </HBox>
            </VBox>
        </Dialog>
    </Page>
</mvc:View>
