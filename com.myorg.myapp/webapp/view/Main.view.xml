<mvc:View
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    controllerName="com.myorg.myapp.controller.Main"
	core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="page" >	<content>
		 <Table id="idTable" items="{/Books}" >
         <headerToolbar>
         <Toolbar >
            <Title text="Books"/>
            <ToolbarSpacer/>
            <Button text="Add" press="onAdd"/>
         </Toolbar>
         </headerToolbar>
        <columns>
            <Column>
             <Text text="Book ID"/>
            </Column>
            <Column>
                <Text text="Title"/>
            </Column>
            <Column>
                <Text text="Author"/>
            </Column>
            <Column>
                <Text text="Price"/>
            </Column>
            <Column>
                <Text text="Stock"/>
            </Column>
           
            <Column>
                <Text text="Actions"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                <Text text="{ID}"/>
                <Text text="{title}"/>
                <Text text="{author}"/>
                <Text text="{price}"/>
                <Text text="{stock}"/>
                <HBox>
                    <Button icon="sap-icon://edit" press="onEdit"/>
                    <Button icon="sap-icon://delete" press="onDelete"/>
                </HBox>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
		</content>
        <Dialog id="editDialog" title="Edit Book" class="sapUiContentPadding">
        <VBox>
            <Label text="Book ID"/>
            <Input value="{/selectedBook/ID}" enabled="false"/>
            <HBox>
                <Button text="Save" press="onSave"/>
                <Button text="Cancel" press="onCancel"/>
            </HBox>
        </VBox>
        </Dialog>
        <Dialog id="addDialog" title="Add Book" class="sapUiContentPadding">
        <VBox>
        <Label text="Book ID"/>
        <Input id="idInput"/>
        <Label text="Title"/>
        <Input id="titleInput"/>
        <Label text="Author"/>
        <Input id="authorInput"/>
        <Label text="Price"/>
        <Input id="priceInput"/>
        <Label text="Stock"/>
        <Input id="stockInput"/>
        <HBox>
            <Button text="Save" press="onSaveAdd"/>
            <Button text="Cancel" press="onCancelAdd"/>
        </HBox>
         </VBox>
        </Dialog>
       
	</Page>

</mvc:View>
