<mvc:View
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    controllerName="com.myorg.myapp.controller.Main"
	core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="page" >	<content>
		 <Table id="idTable" class="idTable" items="{/Books}">
        <columns>
            <Column>
             <Text text="Book ID"/>
            </Column>
            <Column>
                <Text text="Title"/>
            </Column>
            <Column>
                <Text text="Author"/>
            </Column>
            <Column>
                <Text text="Price"/>
            </Column>
            <Column>
                <Text text="Stock"/>
            </Column>
           
            <Column>
                <Text text="Actions"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                <Text text="{ID}"/>
                <Text text="{title}"/>
                <Text text="{author}"/>
                <Text text="{price}"/>
                <Text text="{stock}"/>
                <HBox>
                    <Button icon="sap-icon://edit" press="onEdit"/>
                    <Button icon="sap-icon://delete" press="onDelete"/>
                </HBox>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
		</content>
        <Dialog id="editDialog" title="Edit Book" class="sapUiContentPadding">
        <VBox>
            <Input value="{/selectedBook/ID}" enabled="false"/>
            <Input value="{/selectedBook/title}" placeholder="Title"/>
            <Input value="{/selectedBook/author}" placeholder="Author"/>
            <Input value="{/selectedBook/price}" placeholder="Price"/>
            <Input value="{/selectedBook/stock}" placeholder="Stock"/>
            <HBox>
                <Button text="Save" press="onSave"/>
                <Button text="Cancel" press="onCancel"/>
            </HBox>
        </VBox>
        </Dialog>
	</Page>

</mvc:View>
