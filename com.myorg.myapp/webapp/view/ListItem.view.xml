<mvc:View
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    controllerName="com.myorg.myapp.controller.Main"
	core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="pageLine" >	<content>
		 <Table id="idTableLine" items="{/LineItems}" >
         <headerToolbar>
         <Toolbar >
            <Title text="Books"/>
            <ToolbarSpacer/>
            <Button text="Add" press="onAdd" icon="sap-icon://add" />
            <Button text="ListItem" press="onListItem" />
         </Toolbar>
         </headerToolbar>
        <columns>
            <Column>
             <Text text="Book ID"/>
            </Column>
            <Column>
                <Text text="Title"/>
            </Column>
            <Column>
                <Text text="Author"/>
            </Column>
            <Column>
                <Text text="Price"/>
            </Column>
           
            <Column>
                <Text text="Actions"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                <Text text="{ID}"/>
                <Text text="{book_ID}"/>
                <Text text="{amount}"/>
                <Text text="{parent_ID}"/>
                <HBox>
                    <Button icon="sap-icon://edit" press="onEdit"/>
                    <Button icon="sap-icon://delete" press="onDelete"/>
                </HBox>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
		</content>
        
        <Dialog id="addDialog-List" title="Add Book" class="sapUiContentPadding">
        <VBox>
        <Label text="Book ID"/>
        <Input id="idInputList"/>
        <Label text="Title"/>
        <Input id="titleInputList"/>
        <Label text="Author"/>
        <Input id="authorInputList"/>
        <Label text="Price"/>
        <Input id="priceInputList"/>
        <Label text="Stock"/>
        <Input id="stockInputList"/>
        <HBox>
            <Button text="Save" press="onSaveAdd"/>
            <Button text="Cancel" press="onCancelAdd"/>
        </HBox>
         </VBox>
        </Dialog>
       
	</Page>

</mvc:View>
