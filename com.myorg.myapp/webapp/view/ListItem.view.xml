<mvc:View
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    controllerName="com.myorg.myapp.controller.Main"

	>
    <Page
		title="{i18n>appTitle}"
		id="page-list" >	<content>
		 <Table id="listItem"  >
         <headerToolbar>
         <Toolbar >
            <Title text="Books"/>
            <ToolbarSpacer/>
            <Button text="Add" press="onAdd" icon="sap-icon://add" />
            <Button text="ListItem" press="onListItem" />
         </Toolbar>
         </headerToolbar>
        <columns>
            <Column>
             <Text text="Book ID"/>
            </Column>
            <Column>
                <Text text="Title"/>
            </Column>
            <Column>
                <Text text="Author"/>
            </Column>
            <Column>
                <Text text="Price"/>
            </Column>
            <Column>
                <Text text="Stock"/>
            </Column>
           
            <Column>
                <Text text="Actions"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                <Text text="{ID}"/>
                <Text text="{title}"/>
                <Text text="{author}"/>
                <Text text="{price}"/>
                <Text text="{stock}"/>
                <HBox>
                    <Button icon="sap-icon://edit" press="onEdit"/>
                    <Button icon="sap-icon://delete" press="onDelete"/>
                </HBox>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
		</content>
           
	</Page>

    </mvc:View>
