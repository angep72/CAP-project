<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:smartTable="sap.ui.comp.smarttable"
controllerName="com.myorg.myapp.controller.Main"
>
  <VBox>
    <!-- SmartTable Control -->
    <smartTable:SmartTable
      id="smartTable"
      entitySet="YourEntitySet"
      tableType="Table"
      smartFilterId="smartFilter"
      useVariantManagement="true"
      useTablePersonalisation="true"
      showRowCount="true"
      persistencyKey="smartTable"
      header="Smart Table Example"
      editable="false">
    </smartTable:SmartTable>

    <!-- SmartFilterControl for dynamic filtering -->
    <smartFilter:SmartFilter id="smartFilter" entitySet="YourEntitySet" />
  </VBox>
</mvc:View>
