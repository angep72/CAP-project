<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:F="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="com.myorg.myapp.controller.Main"
>
    <ObjectPageLayout
        id="ObjectPageLayout-admin"
        showTitleInHeaderContent="true"
        alwaysShowContentHeader="false"
        preserveHeaderStateOnScroll="false"
        headerContentPinnable="true"
        isChildPage="true"
        upperCaseAnchorBar="false"
    >
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:FlexBox
                        wrap="Wrap"
                        fitContainer="true"
                        alignItems="Center"
                    >
                        <m:Title
                            text="AfriFam"
                            wrapping="true"
                            class="sapUiTinyMarginEnd"
                        />
                    </m:FlexBox>
                </expandedHeading>

                <snappedHeading>
                    <m:FlexBox
                        wrap="Wrap"
                        fitContainer="true"
                        alignItems="Center"
                    >
                        <m:FlexBox
                            wrap="NoWrap"
                            fitContainer="true"
                            alignItems="Center"
                            class="sapUiTinyMarginEnd"
                        >
                            <m:Title
                                text="Your appointment Matters !!!"
                                wrapping="true"
                                class="sapUiTinyMarginEnd"
                            />
                        </m:FlexBox>
                        <m:FlexBox
                            wrap="NoWrap"
                            fitContainer="true"
                            alignItems="Center"
                            class="sapUiTinyMarginEnd"
                        >
                            <m:Button
                                icon="sap-icon://private"
                                type="Transparent"
                            />
                            <m:Button
                                icon="sap-icon://arrow-down"
                                type="Transparent"
                            />
                        </m:FlexBox>
                    </m:FlexBox>
                </snappedHeading>

                <expandedContent>
                    <m:Text text="Welcome to the system" />
                </expandedContent>

                <snappedContent>
                    <m:Text text="Please let us know your appointment" />
                </snappedContent>

                <!-- <actions>
                    <m:ToggleButton
                        text="Edit"
                        type="Emphasized"
                        press="onEditToggleButtonPress"
                    />
                    <m:OverflowToolbarButton
                        type="Transparent"
                        icon="sap-icon://copy"
                    />
                    <m:OverflowToolbarButton
                        type="Transparent"
                        icon="sap-icon://delete"
                    />
                    <m:OverflowToolbarButton
                        type="Transparent"
                        icon="sap-icon://add"
                    />
                    <m:OverflowToolbarButton
                        type="Transparent"
                        icon="sap-icon://paste"
                    />
                </actions> -->

                <navigationActions>
                    <m:OverflowToolbarButton
                        type="Transparent"
                        icon="sap-icon://full-screen"
                        tooltip="Enter Full Screen Mode"
                    />
                    <m:OverflowToolbarButton
                        type="Transparent"
                        icon="sap-icon://decline"
                        tooltip="Close column"
                    />
                </navigationActions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>
        <headerContent>
            <m:FlexBox
                wrap="Wrap"
                fitContainer="true"
                alignContent="Stretch"
            >
                <m:Avatar
                    src="sap-icon://accidental-leave"
                    displaySize="L"
                    displayShape="Square"
                    class="sapUiTinyMarginEnd"
                />
                <m:VBox
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd"
                />
                <m:VBox
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd"
                />
                <m:VBox
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd"
                >
                    <m:Label text="AfriFam Hospital" />
                </m:VBox>
            </m:FlexBox>
        </headerContent>
        <sections>
            <ObjectPageSection title="General Information">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <form:SimpleForm
                                maxContainerCols="2"
                                editable="false"
                                layout="ResponsiveGridLayout"
                                labelSpanL="12"
                                labelSpanM="12"
                                emptySpanL="0"
                                emptySpanM="0"
                                columnsL="1"
                                columnsM="1"
                            >
                                <form:content>
                                    <m:Table
                                        id="idTablessy"
                                        items="{/Patients}"
                                    >
                                        <m:headerToolbar>
                                            <m:Toolbar>
                                                <m:Title
                                                    text="Registered Patients"
                                                />
                                                <m:ToolbarSpacer />
                                                <m:Button
                                                    text="Register a new Patient "
                                                    icon="sap-icon://add"
                                                    press="OnRegisternewPatient"
                                                />
                                            </m:Toolbar>
                                        </m:headerToolbar>
                                        <m:columns>
                                            <m:Column>
                                                <m:Text text="Patient name" />
                                            </m:Column>
                                            <m:Column>
                                                <m:Text text="date of Birth" />
                                            </m:Column>
                                            <m:Column>
                                                <m:Text text="Gender" />
                                            </m:Column>
                                            <m:Column>
                                                <m:Text text="email" />
                                            </m:Column>
                                            <m:Column>
                                                <m:Text text="Phone" />
                                            </m:Column>
                                            <m:Column>
                                                <m:Text text="address" />
                                            </m:Column>
                                            <m:Column>
                                                <m:Text text="Appoint lather" />
                                            </m:Column>
                                        </m:columns>
                                        <m:items>
                                            <m:ColumnListItem>
                                                <m:cells>
                                                    <m:Text
                                                        text="{firstName} {lastName}"
                                                    />
                                                    <m:Text
                                                        text="{dateOfBirth}"
                                                    />
                                                    <m:Text text="{gender}" />
                                                    <m:Text text="{email}" />
                                                    <m:Text text="{phone}" />
                                                    <m:Text text="{address}" />
                                                    <m:Button
                                                        icon="sap-icon://calendar"
                                                        press="onBookAppoint"
                                                    />
                                                </m:cells>
                                            </m:ColumnListItem>
                                        </m:items>
                                    </m:Table>
                                </form:content>
                            </form:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection title="Appointment ">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <m:Table
                                id="Orderssy"
                                items="{/Appointments}"
                            >
                                <m:headerToolbar>
                                    <m:Toolbar>
                                        <m:Title
                                            text="Patients appointments who Missed the doctors"
                                        />
                                        <m:ToolbarSpacer />
                                        
                                      
                                    </m:Toolbar>
                                </m:headerToolbar>
                                <m:columns>
                                    <m:Column>
                                        <m:Text text="dateTime" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="reason" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="status" />
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="actions" />
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem>
                                        <m:cells>
                                            <m:Text text="{dateTime}" />
                                            <m:Text text="{reason}" />
                                            <m:Text text="{status}" />
                                            <m:HBox>
                                                <m:Button
                                                    id="enableButton"
                                                    icon="sap-icon://accept"
                                                    press=".onAccept"
                                                />

                                                <m:Button
                                                    icon="sap-icon://decline"
                                                    press="onDecline"
                                                    text="{= ${status} === 'ACCEPTED' ? 'false' : 'true' }"
                                                    enabled="{= ${status} === 'ACCEPTED' ? '}"
                                                />
                                            </m:HBox>
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>

        <footer>
            <m:OverflowToolbar>
                <m:ToolbarSpacer />
                <m:Button
                    type="Accept"
                    text="Save"
                />
                <m:Button
                    type="Reject"
                    text="Cancel"
                />
            </m:OverflowToolbar>
        </footer>
    </ObjectPageLayout>
    <m:Dialog
        id="BookAppointmentDialog"
        title="Placing Order in my CAP"
        class="sapUiContentPadding sapUiSmallMargin"
    >
        <m:VBox>
            <m:Label text="Date you wish to come back" />
            <m:DatePicker
                id="dateBooked"
                valueFormat="yyyy-MM-dd"
                displayFormat="yyyy-MM-dd"
                change="validateReleaseDate"
            />
            <m:Label text="Reason" />
            <m:Input id="reason" />

            <m:HBox
                class=" sapUiSmallMargin"
                justifyContent="SpaceBetween"
            >
                <m:Button
                    text="Send Book"
                    press="onDelete"
                />
                <m:Button
                    text="cancel Booking"
                    press="onCancelBooking"
                />
            </m:HBox>
        </m:VBox>
    </m:Dialog>
    <m:Dialog
        id="newPatientdialog"
        title="Registering new Patient"
        class="sapUiContentPadding"
    >
        <m:VBox>
            <m:Label text="First Name" />
            <m:Input id="firstnameId" />
            <m:Label text="Last Name" />
            <m:Input id="lastnameId" />
            <m:Label text="date of Birth" />
            <m:DatePicker
                id="birthdateId"
                valueFormat="yyyy-MM-dd"
                displayFormat="yyyy-MM-dd"
                change="validateReleaseDate"
            />

            <m:Label
                text="Select Gender"
                labelFor="genderSelect"
                required="true"
            />

            <m:Select
                id="genderSelect"
                forceSelection="true"
                width="100%"
                change=".onGenderChange"
            >
                <m:items>
                    <core:Item
                        key="male"
                        text="Male"
                    />
                    <core:Item
                        key="female"
                        text="Female"
                    />
                </m:items>
            </m:Select>

            <m:Label text="Email" />
            <m:Input id="emaialId" />
            <m:Label text="Phone" />
            <m:Input id="phoneId" />
            <m:Label text="address" />
            <m:Input id="addressId" />
        </m:VBox>
        <m:HBox justifyContent="SpaceBetween">
            <m:Button
                text="Submit Patient"
                press="onSendBook"
            />
            <m:Button
                text="cancel Patient"
                press="onCancelPatient"
            />
        </m:HBox>
    </m:Dialog>
</mvc:View>
