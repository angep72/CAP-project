{
	"_version": "1.12.0",

	"sap.app": {
		"id": "com.myorg.myapp",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"applicationVersion": {
			"version": "${version}"
		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},
	

	"sap.ui5": {
  "resources": {
      "css": [
          {
              "uri": "css/style.css"
          }
      ]
  },


		"rootView": {
			"viewName": "com.myorg.myapp.view.App",
			"type": "XML",
			"async": true,
			"id": "app"
		},

		"dependencies": {
			"minUI5Version": "1.131.1",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {}
			}
		},

		"handleValidation": true,

		"contentDensities": {
			"compact": true,
			"cozy": true
		},

		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "workersWebsite.i18n.i18n"
				}
			},
			"": {
            "type": "sap.ui.model.odata.v4.ODataModel",
            "uri": "http://localhost:4004/odata/v4/Books/"
         }
		},

		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "com.myorg.myapp.view",
				"controlId": "app",
				"controlAggregation": "pages",
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "main",
					"target": "main"
				},
				{
					"pattern": "listItem",
                    "name": "listItem",
                    "target": "listItem"
				},

				{
					"pattern": "smartControls",
                    "name": "smartControls",
                    "target": "smartControls"
				},
				{
                    "pattern": "OnModifyControl",
                    "name": "OnModifyControl",
                    "target": "OnModifyControl"
                },
				{
					"pattern": "bookshop",
                    "name": "bookshop",
                    "target": "bookshop"
				}
			],
			"targets": {
				"main": {
					"viewId": "main",
					"viewName": "Main"
				},
				"listItem": {
					"viewId": "listItem",
                    "viewName": "ListItem"
				},
				"smartControls": {
					"viewId": "smartControls",
                    "viewName": "SmartControls"
				},
				"OnModifyControl": {
                    "viewId": "OnModifyControl",
                    "viewName": "OnModifyControl"
                },
				"bookshop": {
                    "viewId": "bookshop",
                    "viewName": "Bookshop"
                }
			}
		}
	}
}
